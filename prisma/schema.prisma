generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  plan          String    @default("FREE")
  stripeId      String?
  checksToday   Int       @default(0)
  lastCheckDate DateTime?
  checks        Check[]
  monitors      Monitor[]
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Check {
  id          String   @id @default(cuid())
  url         String
  title       String?
  description String?
  image       String?
  siteName    String?
  issues      String   @default("[]")
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
}

// ============================================
// MONITORING FEATURE
// ============================================

model Monitor {
  id             String         @id @default(cuid())
  url            String
  nickname       String?
  userId         String
  user           User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  checkFrequency String         @default("daily") // daily | hourly
  status         String         @default("healthy") // healthy | warning | broken
  alertsEnabled  Boolean        @default(true)
  lastCheckedAt  DateTime?
  lastSnapshot   String?        // JSON of last meta tags
  checks         MonitorCheck[]
  alerts         Alert[]
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  @@unique([userId, url])
  @@index([userId])
  @@index([status])
}

model MonitorCheck {
  id              String   @id @default(cuid())
  monitorId       String
  monitor         Monitor  @relation(fields: [monitorId], references: [id], onDelete: Cascade)
  status          String   // healthy | warning | broken
  issues          String   @default("[]") // JSON array of issue codes
  snapshot        String   // JSON of all meta tags at check time
  platformResults String   @default("{}") // JSON of per-platform pass/fail
  title           String?
  description     String?
  image           String?
  imageStatus     String?  // JSON of image validation result
  checkedAt       DateTime @default(now())
  alerts          Alert[]

  @@index([monitorId])
  @@index([checkedAt])
}

model Alert {
  id             String        @id @default(cuid())
  monitorId      String
  monitor        Monitor       @relation(fields: [monitorId], references: [id], onDelete: Cascade)
  checkId        String?
  check          MonitorCheck? @relation(fields: [checkId], references: [id], onDelete: SetNull)
  type           String        // image_broken | title_changed | description_truncated | tags_removed | etc
  message        String
  previousValue  String?
  currentValue   String?
  channel        String        @default("email") // email | slack | discord
  sentAt         DateTime?
  acknowledged   Boolean       @default(false)
  acknowledgedAt DateTime?
  createdAt      DateTime      @default(now())

  @@index([monitorId])
  @@index([acknowledged])
}
